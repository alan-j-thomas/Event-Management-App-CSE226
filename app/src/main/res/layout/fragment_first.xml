<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#dfccc5"
    android:fillViewport="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/organizer"
            android:layout_marginTop="40dp"
            android:scaleType="fitCenter"
            android:layout_marginStart="75dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Planner"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:fontFamily="@font/font5"
            android:layout_marginTop="260dp"
            android:layout_marginStart="90dp"
            />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:layout_marginTop="390dp"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- CardView Item 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cdEvents"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:foreground="?attr/selectableItemBackground"
                android:focusable="true"
                app:cardElevation="10dp"
                android:clickable="true"
                app:cardCornerRadius="10dp"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@drawable/calendar"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EVENTS"
                        android:fontFamily="@font/font4"
                        android:layout_gravity="center"
                        android:textSize="14sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- CardView Item 2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cdGuests"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardElevation="10dp"
                app:cardCornerRadius="10dp"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@drawable/guests"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GUESTS"
                        android:fontFamily="@font/font4"
                        android:layout_gravity="center"
                        android:textSize="14sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Add more CardView items similarly as needed -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cdVendors"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:layout_marginTop="20dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardElevation="10dp"
                app:cardCornerRadius="10dp"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@drawable/vendors"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VENDORS"
                        android:fontFamily="@font/font4"
                        android:layout_gravity="center"
                        android:textSize="14sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cdVenue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:layout_marginTop="20dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardElevation="10dp"
                app:cardCornerRadius="10dp"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@drawable/location"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VENUE"
                        android:fontFamily="@font/font4"
                        android:layout_gravity="center"
                        android:textSize="14sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cdRating"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:foreground="?attr/selectableItemBackground"
                android:layout_marginTop="20dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="10dp"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@drawable/rating2"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="APP RATING"
                        android:fontFamily="@font/font4"
                        android:layout_gravity="center"
                        android:textSize="14sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cdList"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="8dp"
                android:layout_marginTop="20dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="10dp"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@drawable/checklist"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CHECKLIST"
                        android:fontFamily="@font/font4"
                        android:layout_gravity="center"
                        android:textSize="14sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>



        </GridLayout>

    </FrameLayout>

</ScrollView>
